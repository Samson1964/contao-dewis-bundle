					<?php if(!$GLOBALS['TL_CONFIG']['dewis_geschlecht_ausblenden']): ?><th class="col_4 right-line">Geschl.</th><?php endif; ?>
					<th class="col_5 right-line">Letzte<br>Ausw.</th>
					<th class="col_6 right-line">DWZ</th>
