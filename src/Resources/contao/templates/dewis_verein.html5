		?>
		<script>
		(function($) 
		{
			$(document).ready(function(){

				// Parser für letzte Auswertung 
				$.tablesorter.addParser({ 
					id: 'letzteAuswertung', 
					is: function(s) { 
						// return false so this parser is not auto detected 
						return false; 
					}, 
					format: function(s) { 
						// Wert zum Sortieren 
						return s.substr(3) + s.substr(0,2);
					}, 
					// set type, either numeric or text 
					type: 'numeric' 
				}); 

				// Parser für DWZ
				$.tablesorter.addParser({ 
					id: 'DWZ', 
					is: function(s) { 
						// return false so this parser is not auto detected 
						return false; 
					}, 
					format: function(s) { 
						// Wert zum Sortieren 
						switch(s.trim()) {
							case 'Restp.': return 0; break;
							case '': return -1; break;
							default: break;
						}
						var dwz = s.split('-');
						dwz[1] = '000' + dwz[1].trim();
						var temp = dwz[0].trim() + dwz[1].substr(-3);
						return temp;
					}, 
					// set type, either numeric or text 
					type: 'numeric' 
				}); 

				// Parser für FIDE-Titel
				$.tablesorter.addParser({ 
					id: 'FIDE-Titel', 
					is: function(s) { 
						// return false so this parser is not auto detected 
						return false; 
					}, 
					format: function(s) { 
						// Wert zum Sortieren 
						switch(s.trim()) {
							case 'GM': return 9; break;
							case 'IM': return 8; break;
							case 'WGM': return 7; break;
							case 'FM': return 6; break;
							case 'WIM': return 5; break;
							case 'CM': return 4; break;
							case 'WFM': return 3; break;
							case 'WCM': return 2; break;
							default: return 0; break;
						}
					}, 
					// set type, either numeric or text 
					type: 'numeric' 
				}); 

				$("#dewisTable").tablesorter({
					headers: { 
						<?= $this->tablesorter[0] ?>: { 
							sorter:'letzteAuswertung' 
						},
						<?= $this->tablesorter[1] ?>: { 
							sorter:'DWZ' 
						},
						<?= $this->tablesorter[2] ?>: { 
							sorter:'FIDE-Titel' 
						} 
					} 
				});
				
			});
		})(jQuery);
		</script>
		
		<table id="dewisTable" class="body tablesorter">
